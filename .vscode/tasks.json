{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ to Assembly and Executable with g++ (no optimizations)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-S",
                "-O0",
                "-g",
                "-o",
                "${fileBasenameNoExtension}.asm",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to compile C++ source files into assembly using g++ with no optimizations."
        },
        {
            "label": "Compile C++ to Executable with g++ (no optimizations)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O0",
                "-g",
                "-o",
                "${fileBasenameNoExtension}.out",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to compile C++ source files into an executable using g++ with no optimizations."
        },
        {
            "label": "Compile C++ to Assembly and Executable with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-S",
                "-o",
                "${fileBasenameNoExtension}.asm",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to compile C++ source files into assembly using Clang."
        },
        {
            "label": "Compile C++ to Executable with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-o",
                "${fileBasenameNoExtension}.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to compile C++ source files into an executable using Clang."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}